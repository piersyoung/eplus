<%= simple_form_for(@school) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :is_private %>
    <%= f.input :gender_id %>
    <%= f.input :dayboard_id %>
    <%= f.input :religion_id %>
    <%= f.input :address %>
    <%= f.input :town %>
    <%= f.input :county_id %>
    <%= f.input :postcode %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :web %>
    <%= f.input :size %>
    <%= f.input :agefrom %>
    <%= f.input :ageto %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
