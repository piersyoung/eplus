
<h2>“By seeking and blundering we learn” ― Goethe </h2>
	<!--=============================================================-->
		<section class="row-fluid">
			
			<!-- School latest
				================================================== -->
			<div class="span6">
				<h1 class="box-header">
					<i class="icon-bullhorn"></i>
					Latest Applications and Results
				</h1>
				<div class="box">
				<table class="table table-hover">
				<thead>
				<th>Date</th>
				<th>Name</th>
				<th>School</th>
				<th>Status</th>
				</thead>
				<tbody>
				<% @subs.each do |s| %>
				<tr>
				<td><%= s.updated_at.strftime("%d.%m.%y") %></td>
				 <td><%= link_to s.student.name, :controller=>"students", :action =>"show", :id=>s.student.id %></td>
				 <td><%= link_to s.school.name, :controller=>"schools", :action=>"show", :id=>s.school.id %></td>
			    <td><span class="<%= sub_label(s)%>"><%= s.status.name %></span></td>	
				</tr>
				<% end %>
				</tbody>
				</table>
			
				</div>
				
			</div>
			<!-- / School Latest -->

			<!-- Details
				================================================== -->
			<div class="span3" id="counters">
				<h3 class="box-header">
					<i class="icon-stethoscope"></i>
					Where we stand
				</h3>
				<div class="box no-border no-padding">
				
					<div class="rounded-borders">
						<div class="counter small">
							<span>
							<%= @details[0] %>
							</span>
						</div>
						<div class="counter-label">
							Open Applications
						</div>
					</div>
					<div class="rounded-borders">
						<div class="counter small">
							<span>
							<%= @details[2] %>
							</span>
						</div>
						<div class="counter-label">
							Offered Place
						</div>
					</div>
					
					<div class="rounded-borders">
						<div class="counter small">
							<span>
							<%= @details[1] %>
							</span>
						</div>
						<div class="counter-label">
							Waitlist/Interview
						</div>
					</div>
					
					<div class="rounded-borders">
						<div class="counter small">
							<span>
							<%= @details[3] %>
							</span>
						</div>
						<div class="counter-label">
							No place
						</div>
					</div>
					
					
					
				</div>
			</div>
			<div class="span3">
				<h3 class="box-header">
					<i class="icon-truck"></i>
					Shortcuts
				</h3>
				<div class="box">
					<table class="table table-hover">
			
					<tbody>
					<tr>
					<td><%= link_to :controller=>"submissions",:action=>"new" do %>
					<i class="icon-share"></i> Add an application
					<% end %>
					</td></tr>
					<tr>
					<td><%= link_to :controller=>"forms",:action=>"show",:id=>"2" do%>
					<i class="icon-coffee"></i> 6N 
					<% end %>
					</td></tr>
					<tr>
					<td><%= link_to :controller=>"forms",:action=>"show",:id=>"16" do %>
					<i class="icon-beer"></i> 6P
					<%end %>
					</td></tr>
					<tr>
					<td><%= link_to :controller=>"forms",:action=>"show",:id=>"17" do %>
					<i class="icon-magic"></i> 6R
					<%end %>
					</td></tr>
					</tbody>
					</table>
				</div>
			</div>

		</section>
		<section class="row-fluid">
			<h3 class="box-header">
				<i class="icon-calendar"></i>
					Dates	
			</h3>
		<div class="box">
			<div id='calendar'></div>
		</div>
</section>

				
					
			